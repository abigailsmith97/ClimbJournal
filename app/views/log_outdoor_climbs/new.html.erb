<% if user_signed_in? %>
  
  <%= form_with(model: @log_climb, url: log_outdoor_climbs_path, id: "log_climb_form") do |f| %>

    <div class="field">
      <%= f.label :date, 'When did you go climbing?' %>
      <%= f.date_field :date %>
    </div>
    <br>
    <div class="field">
      <%= f.label :climbing_type, 'Select Climbing Style' %>
